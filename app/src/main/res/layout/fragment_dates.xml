<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/apr_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="160dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dedede">

            <TextView
                android:id="@+id/date_apr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:padding="8dp"
                android:text="1"
                android:textColor="#222"
                android:textSize="36sp"
                android:textStyle="" />

            <TextView
                android:id="@+id/date_apr_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_apr"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:text="Apr"
                android:textColor="#222"
                android:textSize="20sp"
                android:textStyle="" />

            <TextView
                android:id="@+id/apr_text"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/date_apr"
                android:paddingTop="34dp"
                android:text="@string/date_card_apr"
                android:textColor="#666"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/mei_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/apr_card"
        android:layout_centerVertical="true"
        android:layout_marginTop="48dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dedede">

            <TextView
                android:id="@+id/date_mei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLines="3"
                android:padding="8dp"
                android:text="14"

                android:textColor="#222"
                android:textSize="36sp"
                android:textStyle="" />

            <TextView
                android:id="@+id/date_mei_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_mei"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:text="Mei"
                android:textColor="#222"
                android:textSize="20sp"
                android:textStyle="" />

            <TextView
                android:id="@+id/mei_text"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/date_mei"
                android:paddingTop="34dp"
                android:text="@string/date_card_may"
                android:textColor="#666"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

