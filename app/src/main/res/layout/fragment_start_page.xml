<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/erasmus" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/hr_small" />


    <TextView
        android:id="@+id/nav_Courses"
        android:layout_width="298dp"
        android:layout_height="60dp"
        android:layout_above="@+id/startpage_text"
        android:layout_alignEnd="@+id/main_image"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="144dp"
        android:background="#BB1835"
        android:lineSpacingExtra="30sp"
        android:text="Lijst met opleidingen"
        android:textAlignment="textStart"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/nav_Dates"
        android:layout_width="298dp"
        android:layout_height="60dp"
        android:layout_above="@+id/startpage_text"
        android:layout_alignEnd="@+id/main_image"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="39dp"
        android:background="#BB1835"
        android:text="Lijst met Data"
        android:textAlignment="textStart"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/startpage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="60dp"
        android:alpha=".7"
        android:background="@android:color/background_light"
        android:lineSpacingExtra="10sp"
        android:scrollbars="vertical"
        android:text="@string/tutorial"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="15sp" />
</RelativeLayout>